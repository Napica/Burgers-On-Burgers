<h1>Burgers on Burgers</h1>

<h2>Burgers On!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devaured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a burger</h2>
<form class="create-form">

    <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Is this your order?</label><br>
    <input type="radio" name="devouered" value="0" checked> To Eat!!
  </div>

  <button type="submit">Add Burger</button>
</form>
